<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <script src="http://d3js.org/d3.v3.min.js"></script>
    <style>
    </style>
    <script type="text/javascript">


  
function draw_(geo_data) {
	"use strict";
	var margin = 75,
		width = 1400 - margin,
		height = 600 - margin;

	var svg = d3.select("body")
		.append("svg")
		.attr("width", width + margin)
		.attr("height", height + margin)
		.append('g')
		.attr('class', 'map');



	var projection = d3.geo.mercator()
		.center([-72.9236, 41.31])
		.scale(200000);

	var path = d3.geo.path().projection(projection);


	var map = svg.selectAll('path')
		 .data(geo_data.features)
		 .enter()
		 .append('path')
		 .attr('d', path)
		 .style('fill', 'lightBlue')
		 .style('stroke', 'black')
		 .style('stroke-width', 1);

	function plot_points(data){
		function agg_year(leaves) {
			
			var coords = leaves.map(function(d) {
				//debugger;
				return projection([d['lng'], d['lat']]);
			});
	
			var center_x = d3.mean(coords, function(d) {
				return d[0];
			});

			var center_y = d3.mean(coords, function(d) {
				return d[1];
			});
			//debugger;
			return {'x' : center_x,
				'y' : center_y}
		}

		var nested = d3.nest().rollup(function(leaves){return leaves.length}).entries(data);		

		var transformed_data =[]

		data.forEach(function(d){
			transformed_data.push(
				{"values":
					{'x':projection([d["lng"],d["lat"]])[0],
					'y':projection([d["lng"],d["lat"]])[1]}
				});
		})

		
		svg.append('g')
			.attr("class", "bubble")
			.selectAll("circle")
			.data(transformed_data)
			.enter()
			.append("circle")
			.attr("cx",function(d) {return d["values"]['x']})
			.attr("cy",function(d) {return d["values"]['y']})
			.attr("r",2)
			.style("fill","red")
			//YOUR CODE HERE
		debugger;
	}

	d3.csv("SCF_NH_sample4.csv", function(d) {
	// transform data
		d['lng'] = +d['lng'];
		d['lat'] = +d['lat'];
		return d;
  	}, plot_points);
};


function draw(geo_data){
	return draw_(geo_data);
};
      </script>
  </head>
<body>
  <script type="text/javascript">
  /*
    Use D3 to load the GeoJSON file
    */

d3.json("new_haven.geojson", draw);
  </script>
</body>
</html>
