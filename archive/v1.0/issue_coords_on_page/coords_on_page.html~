<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <script src="http://d3js.org/d3.v3.min.js"></script>
    <script src="http://dimplejs.org/dist/dimple.v2.0.0.min.js"></script>
    
    <style>
      circle.dimple-series-1 {
        fill: red;
      }

      h2 {
        text-align: center;
      }
    </style>

    <script type="text/javascript">
      function draw(data) {
      
      /*
        D3.js setup code
      */

          "use strict";
          var margin = 75,
              width = 1400 - margin,
              height = 600 - margin,
              radius=2,
	      color="";

          // d3.select("body")
          //   .append("h2")
          //   .text("World Cup Attendance")

          var svg = d3.select("body")
            .append("svg")
              .attr("width", width + margin)
              .attr("height", height + margin)
            .append('g')
                .attr('class','chart');

      /*
        Dimple.js Chart construction code
      */

          d3.select("svg")
            .selectAll("circle")
            .data(data)
            .enter()
            .append("circle");

          // Find range of date column
          var lng_extent = d3.extent(data, function(d) {
              return d['lng'];
          });

          // Find range of attendance column
          var lat_extent = d3.extent(data, function(d) {
              return d['lat'];
          })

          // Create x-axis scale mapping dates -> pixels
          var lng_scale = d3.scale.linear()
            .range([margin, width])
            .domain(lng_extent);

          // Create y-axis scale mapping attendance -> pixels
          var lat_scale = d3.scale.linear()
            .range([height, margin])
            .domain(lat_extent);

          var lng_axis = d3.svg.axis()
            .scale(lng_scale);

          var lat_axis = d3.svg.axis()
            .scale(lat_scale)
            .orient("left");

          d3.select("svg")
            .append("g")
            .attr("class", "x axis")
            .attr("transform", "translate(0," + height + ")")
            .call(lng_axis);

          d3.select("svg")
            .append("g")
            .attr("class", "y axis")
            .attr("transform", "translate(" + margin + ",0)")
            .call(lat_axis);





          d3.selectAll("circle")
            .attr("cx", function(d) {
		debugger;
                return lng_scale(d["lng"]);
            })
            .attr("cy", function(d) {
                return lat_scale(d["lat"]);
            })
            .attr("r", function(d) {
		radius=20
		/*if (d["home"]===d["team1"]){
		    radius=5;
		}*/
		return radius;
	    })
            .attr("fill", function(d) {
		color="blue";
		/*if (d["home"]===d["team1"]){
		    color="red";
		}*/
		return color;
	    })
	   
        };

    </script>
  </head>
<body>
  <script type="text/javascript">
  /*
    Use D3 (not dimple.js) to load the TSV file
    and pass the contents of it to the draw function
  */

  //example date: 27-05-1934 (16:00 h)
 //format = d3.time.format("%d-%m-%Y (%H:%M h)");


  

  d3.csv("scf_sample3.csv", function(d) {
      // transform data
      d['lng'] = +d['lng'];
      d['lat'] = +d['lat'];
      return d;
	debugger;
  }, draw); 
  </script>
</body>
</html>
